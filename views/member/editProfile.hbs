<div class="container-fluid allOfPage tileView">

<h2>{{user.username}}</h2>
<h5>Edit Your Profile</h5>
<br>

<form action="/members/{{user._id}}/update" class="form-container" method="post">

<div class="form-group">
<label>Username</label>
<input type="text" name="updUsername" value="{{user.username}}">
</div>
<br>

<div class="form-group">
<label>Email</label>
<input type="text" name="updEmail" value="{{user.email}}">
</div>
<br>

<label>Phone Number:</label>
<input type="text" name="updPhoneNumber" value="{{user.phoneNumber}}">
<br>

<label>Activities of choice:</label>
{{#each activity}}

 {{#if this.yes}} 
         <label><input type="checkbox" name="updActivity" value="{{this._id}}">{{this.name}}</label>
 {{/if}}
     
 {{#unless this.yes}} 
         <label><input type="checkbox" name="updActivity" value="{{this._id}}">{{this.name}}</label>
 {{/unless}}
{{/each}} 

<br>
<button type="submit" class="btn btn-outline-info">Save the Changes</button>

</form>
<br>

<form action="/members/{{user._id}}/delete" method="post" class="deleteAlert">
<button type="submit" class="btn btn-outline-danger">Delete the Account</button>
</form>

</div>
